{

"files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/env": true,
    "**/.venv": true,
    "**/.idea": true,
    "**/.pytest_cache":true,
    "*.egg-info/":false,
    "**/__archive__": false,
    "**/.vscode":false,
},
"workbench.colorCustomizations":{
    "statusBar.background": "#3613e3",
},
"python.formatting.provider": "black",
"python.testing.pytestArgs": [
    "."
],
"python.testing.unittestEnabled": false,
"python.testing.nosetestsEnabled": false,
"python.testing.pytestEnabled": true,

// "python.pythonPath": "/workspaces/xxx/.venv/bin/python",
"python.linting.enabled": false,

}
